@model TravelAgency.MVC.ViewModels.LoginModel
@{
    ViewBag.Title = "Index";
}

<h2>Login</h2>

<div>
    <hr />
    <lable class="text-danger">@ViewBag.LoginMessage</lable>
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()

        <dl class="dl-horizontal">
            <dt>
                @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-12" })
            </dt>

            <dd>
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            </dd>


            <dt>
                @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-12" })
            </dt>

            <dd>
                @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
            </dd>
            <dd>
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
            </dd>
        </dl>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </div>
        @Html.ActionLink("Register a new user", "Register", new { ReturnUrl = ViewBag.ReturnUrl });
    }
</div>